<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/defenseOne">


    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/pathblockingButton"
        android:layout_marginTop="20dp"
        android:text="Pathblocking"
        />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pathblockingButton"
        android:id="@+id/knockingButton"
        android:layout_marginTop="20dp"
        android:text="Knocking"
        />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/knockingButton"
        android:id="@+id/dockingButton"
        android:layout_marginTop="20dp"
        android:text="Docking"
        />

    <SeekBar
        android:id="@+id/defenseSlider"
        android:progressDrawable="@drawable/progress_control"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pathblockingButton"
        android:max="3"
        android:progress="0"
        android:minHeight="5dp"
        android:maxHeight="5dp"
        android:layout_marginTop="20dp"
        android:thumbTint="@color/LightGrey"
        />

    <TextView
        android:id="@+id/defenseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defenseSlider"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:text="0"
        android:scaleX="2"
        android:scaleY="3"
        />

</RelativeLayout>