<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/allianceTeamOneButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/allianceTeamTwoButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/allianceTeamThreeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <RelativeLayout
        android:id="@+id/togglePredator"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/downArrowView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:visibility="visible"
            android:src="@drawable/down_arrow"/>
        <ImageView
            android:id="@+id/upArrowView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:visibility="invisible"
            android:src="@drawable/up_arrow"/>

    </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/opposingTeamOneButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/opposingTeamTwoButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/opposingTeamThreeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>


        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/Gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <Button
            android:id="@+id/ineffective_button"
            android:background="@color/LightGrey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/Gray"/>

        <Button
            android:id="@+id/effective_button"
            android:background="@color/LightGrey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/Gray"/>

    <Button
        android:id="@+id/confirm_button"
        android:background="@color/LightGrey"
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    </LinearLayout>