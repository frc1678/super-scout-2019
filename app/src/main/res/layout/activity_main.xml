<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true">
        <EditText
            android:id="@+id/matchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:inputType="number"
            android:hint = "Match #"
            android:textSize="35sp"
            android:imeOptions="actionDone|flagNoExtractUi"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/matchNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/allianceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue Alliance"
                android:textColor="#0000FF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/teamOneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team1 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"
                android:imeOptions="actionDone|flagNoExtractUi"/>
            <EditText
                android:id="@+id/teamTwoNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team2 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"
                android:imeOptions="actionDone|flagNoExtractUi"/>
            <EditText
                android:id="@+id/teamThreeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team3 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"
                android:imeOptions="actionDone|flagNoExtractUi"/>

        </LinearLayout>

        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@drawable/cat_new"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:onClick="catClicked"/>
        <ToggleButton
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mute"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:alpha="0"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/listLayout"
        android:layout_alignParentRight="true"
        android:layout_weight="1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="330dp"
            android:id="@+id/view_files_received"
            android:layout_below="@+id/searchEditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search: "
            android:id="@+id/searchEditText"
            android:layout_alignParentTop="true"
            android:imeOptions="actionDone|flagNoExtractUi"
            />

    </RelativeLayout>
</LinearLayout>


